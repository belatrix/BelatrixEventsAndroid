<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable title="DataSelectionView" >
        <attr title="hint_text" format="string"/>
    </declare-styleable>

    <declare-styleable title="KeywordView" >
        <attr title="key_text" format="string"/>
    </declare-styleable>

    <declare-styleable title="VerticalMarqueeTextView">
        <attr
            title="autoStartMarquee"
            format="boolean" />
        <attr
            title="marqueeSpeed"
            format="reference|integer" />
        <attr
            title="text"
            format="reference|string" />
        <attr
            title="textSize"
            format="reference|dimension" />
        <attr
            title="textColor"
            format="reference|color" />
        <attr
            title="textAppearance"
            format="reference" />
        <attr title="textStyle">
            <enum
                title="normal"
                value="0" />
            <enum
                title="bold"
                value="1" />
            <enum
                title="italic"
                value="2" />
        </attr>
        <attr title="typeface">
            <enum
                title="normal"
                value="0" />
            <enum
                title="sans"
                value="1" />
            <enum
                title="serif"
                value="2" />
            <enum
                title="monospace"
                value="3" />
        </attr>
    </declare-styleable>
</resources>