<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- Override the ActionMode Style -->
        <item name="actionModeStyle">@style/ActionMode</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar"/>

    <style name="Translucent" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="ActionMode" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/white</item>
    </style>

    <style name="TextView" parent="android:TextAppearance">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_8_6</item>
        <item name="android:paddingLeft">@dimen/dimen_2_5</item>
        <item name="android:paddingRight">@dimen/dimen_2_5</item>
        <item name="android:background">@drawable/selector_edittext</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Button.Accent">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/selector_accent_button</item>
    </style>

    <style name="Button.Primary.Inverse">
        <item name="android:textColor">@color/selector_text_primary_button_inverse</item>
        <item name="android:background">@drawable/selector_primary_button_inverse</item>
    </style>

    <style name="ItemList">
        <item name="android:layout_height">?attr/listPreferredItemHeight</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">?listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?listPreferredItemPaddingLeft</item>
        <item name="android:background">@drawable/selector_default_item</item>
    </style>

    <style name="LargeItemList" parent="ItemList">
        <item name="android:minHeight">?attr/listPreferredItemHeightLarge</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Divider">
        <item name="android:background">@color/divider</item>
    </style>

    <style name="horizontalDivider" parent="Divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="verticalDivider" parent="Divider">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="SingleLineItemTextView" parent="TextView">
        <item name="android:textSize">@dimen/text_16</item>
    </style>


    <style name="TextAppearance.MyApp.Title.Collapsed" parent="android:TextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="TextAppearance.MyApp.Title.Expanded" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextAppearance.MyApp.CardViewTitle.Expanded" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">@android:color/black</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_dialog</item>
    </style>

    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <style name="Theme.Transparent" parent="Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.SemiTransparent" parent="Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="Typo"/>

    <style name="Typo.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Typo.Caption.Dark">
        <item name="android:textColor">@color/white_54</item>
    </style>

    <style name="Typo.Caption.Light">
        <item name="android:textColor">@color/black_54</item>
    </style>

    <style name="Typo.Body1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Typo.Body1.Dark">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="Typo.Body1.Light">
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="Typo.Subheading">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Typo.Subheading.Dark">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="Typo.Subheading.Light">
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="Typo.Heading">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Typo.Heading.Dark">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="Typo.Heading.Light">
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="Typo.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Typo.Title.Dark">
        <item name="android:textColor">@color/white_87</item>
    </style>

    <style name="Typo.Title.Light">
        <item name="android:textColor">@color/black_87</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:minHeight">@dimen/dimen_8_6</item>
        <item name="android:textSize">14sp</item>
        <item name="fontPath">fonts/OpenSans-SemiBold.ttf</item>
    </style>

    <style name="Button.Primary">
        <item name="android:textColor">@color/white_87</item>
        <item name="android:background">@drawable/background_primary_button</item>
    </style>

    <style name="Button.Secondary">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:background">@drawable/background_secondary_button</item>
    </style>
</resources>
