<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="24dp"
            android:contentDescription="@null"
            android:src="@drawable/sign_logo"/>

        <TextView
            style="@style/TextAppearance.Subheading.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal"
            android:text="@string/sign_in_message"/>

        <TextView
            style="@style/TextAppearance.Caption.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            android:text="@string/email"/>

        <EditText
            android:id="@+id/et_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:textColor="@color/black_87"
            android:textSize="16sp"/>

        <TextView
            style="@style/TextAppearance.Caption.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="16dp"
            android:text="@string/hint_password"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:hint="@string/hint_password"
            android:inputType="textPassword"
            android:textColor="@color/black_87"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_recover_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="@dimen/dimen_8"
            android:text="@string/recover_password"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_10_8"
            android:layout_marginRight="@dimen/dimen_10_8"
            android:layout_marginTop="@dimen/dimen_2_5"
            android:gravity="center_horizontal"
            android:textColor="@color/red"
            android:visibility="gone"/>

        <Button
            android:id="@+id/bt_login"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_primary_button"
            android:text="@string/sign_in"
            android:textColor="@color/white"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:contentDescription="@null"
            android:src="@drawable/sign_divider"/>

        <Button
            android:id="@+id/bt_create_account"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="64dp"
            android:layout_marginRight="64dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/background_secondary_button"
            android:text="@string/create_an_account"
            android:textColor="@color/colorPrimary"/>

    </LinearLayout>
</ScrollView>