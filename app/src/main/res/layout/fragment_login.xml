<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_6_5"
        android:layout_marginRight="@dimen/dimen_6_5"
        android:layout_marginTop="@dimen/dimen_6_5">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_user"
            android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_6_5"
        android:layout_marginRight="@dimen/dimen_6_5"
        android:layout_marginTop="@dimen/dimen_8">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_password"
            android:inputType="textPassword"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_8"
        android:layout_marginRight="@dimen/dimen_10_8"
        android:layout_marginTop="@dimen/dimen_2_5"
        android:gravity="center_horizontal"
        android:textColor="@color/red"
        android:visibility="gone"/>
    <Button
        android:id="@+id/bt_login"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_8"
        android:layout_marginRight="@dimen/dimen_10_8"
        android:layout_marginTop="@dimen/dimen_6_5"
        android:background="@drawable/background_primary_button"
        android:text="@string/sign_in"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tv_recover_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_8"
        android:padding="8dp"
        android:text="@string/recover_password"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_create_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimen_6_5"
        android:padding="8dp"
        android:text="@string/create_an_account"
        android:textColor="@color/colorPrimary"/>
</LinearLayout>