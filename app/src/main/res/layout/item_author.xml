<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/off_white"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/id_author_name"
        style="@style/Typo.Subheading.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Luis Miguel Burgos Ortiz"/>

    <TextView
        android:id="@+id/id_author_email"
        style="@style/Typo.Caption.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="luism.burgos.ortiz@gmail.com"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_author_phone"
            style="@style/Typo.Caption.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="998698619"/>

        <TextView
            android:id="@+id/id_author_role"
            style="@style/Typo.Caption.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="Mobile Developer"/>
    </LinearLayout>

</LinearLayout>