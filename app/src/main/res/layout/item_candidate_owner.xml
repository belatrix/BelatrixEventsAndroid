<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingRight="32dp"
    android:paddingTop="8dp">

    <TextView
        android:id="@+id/id_participant_name"
        style="@style/Typo.Subheading.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Luis Miguel Burgos Ortiz"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_participant_email"
            style="@style/Typo.Caption.Light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="luism.burgos.ortiz@gamil.com"/>

        <TextView
            android:id="@+id/id_participant_role"
            style="@style/Typo.Caption.Light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="Mobile Developer"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ib_candidate_cancel"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="@null"
            android:minHeight="0dp"
            android:src="@drawable/ic_grey_cancel"/>

        <ImageButton
            android:id="@+id/ib_candidate_ok"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/white"
            android:contentDescription="@null"
            android:src="@drawable/ic_grey_check"/>
    </LinearLayout>
</LinearLayout>