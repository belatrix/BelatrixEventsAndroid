<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_container"
    android:layout_width="@dimen/dimen_10_10"
    android:layout_height="@dimen/dimen_12_10"
    app:cardElevation="@dimen/dimen_5"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_8"
        android:layout_marginRight="@dimen/dimen_8">

        <ImageView
            android:id="@+id/event_picture"
            android:layout_width="match_parent"
            android:clickable="true"
            android:layout_height="match_parent"
            android:layout_above="@+id/event_title"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/dimen_5"
            android:contentDescription="@string/profile_image_content_desc"
            android:scaleType="centerCrop"
            android:src="@drawable/event_placeholder"
            android:transitionName="@string/transition_photo" />


        <TextView
            android:id="@+id/event_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="2"
            android:paddingBottom="@dimen/dimen_8"
            android:textColor="@color/black"
            android:textSize="@dimen/text_10"
            tools:text="Title" />


    </RelativeLayout>


    <ImageView
        android:id="@+id/event_more"
        android:layout_width="@dimen/dimen_4_5"
        android:layout_height="@dimen/dimen_4_5"
        android:layout_alignParentRight="true"
        android:layout_gravity="bottom|right"
        android:layout_marginBottom="@dimen/dimen_4"
        android:clickable="true"
        android:src="@drawable/ic_more_vert_black_24dp" />

</android.support.v7.widget.CardView>