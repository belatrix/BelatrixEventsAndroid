<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_6_5"
        android:layout_marginRight="@dimen/dimen_6_5"
        android:layout_marginTop="@dimen/dimen_6_5">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_email"
            android:inputType="text"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/tv_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_8"
        android:layout_marginRight="@dimen/dimen_10_8"
        android:layout_marginTop="@dimen/dimen_2_5"
        android:gravity="center_horizontal"
        android:textColor="@color/red"
        android:visibility="gone"/>

    <Button
        android:id="@+id/bt_recover_password"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_10_8"
        android:layout_marginRight="@dimen/dimen_10_8"
        android:layout_marginTop="@dimen/dimen_6_5"
        android:background="@drawable/background_primary_button"
        android:text="@string/recover"
        android:textColor="@color/white"/>
</LinearLayout>