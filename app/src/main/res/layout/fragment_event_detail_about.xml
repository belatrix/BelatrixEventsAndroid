<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:clipToPadding="false"
    android:orientation="vertical">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dimen_5"
            android:orientation="vertical"
            android:padding="@dimen/activity_margin">

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_event_time"
                android:drawablePadding="@dimen/dimen_5"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="10/10/2017 7:00pm"
                tools:text="DateHour" />

            <TextView
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_5"
                android:drawableLeft="@drawable/ic_event_location"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="Oficinas Belatrix"
                tools:text="Location" />

            <TextView
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_2_5"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="Oficinas Belatrix"
                android:textColor="@color/black"
                tools:text="Description" />

            <TextView
                android:id="@+id/link"
                android:linksClickable="true"
                android:autoLink="web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_3_5"
                android:fontFamily="serif"
                android:gravity="center_vertical"
                android:text="Oficinas Belatrix"
                android:textColor="@color/black"
                tools:text="Description" />

            <WebView
                android:id="@+id/map_location"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_25_10"
                android:layout_marginBottom="@dimen/dimen_5_5"
                android:layout_marginTop="@dimen/dimen_3_5" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>