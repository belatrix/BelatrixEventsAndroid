<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:replace="label"
    android:label="@string/title_main"
    package="com.belatrixsf.events">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>

    <application
        android:name=".BxEventsApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        tools:replace="android:label"
        android:label="@string/title_main"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.ui.activities.MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|screenSize|orientation"
            />
        <activity
            android:name=".presentation.ui.activities.AboutActivity"
            android:label="@string/title_about_activity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:theme="@style/Translucent" />
        <activity
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:name=".presentation.ui.activities.EventDetailActivity"/>
        <activity
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:name=".presentation.ui.activities.EventListActivity" />
        <activity
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:screenOrientation="portrait"
            android:name=".presentation.ui.activities.FinderActivity" />
        <activity
            android:name="com.journeyapps.barcodescanner.CaptureActivity"
            android:screenOrientation="fullSensor"
            tools:replace="screenOrientation" />
        <activity
            android:configChanges="keyboardHidden|screenSize|orientation"
            android:name=".presentation.ui.activities.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>