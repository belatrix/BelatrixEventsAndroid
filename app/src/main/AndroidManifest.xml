<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.belatrixsf.events">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".BxEventsApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".presentation.ui.activities.MainActivity" />
        <activity
            android:name=".presentation.ui.activities.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.ui.activities.LauncherActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.ui.activities.AboutActivity"
            android:label="@string/title_about_activity"
            android:theme="@style/Translucent" />
        <activity
            android:name=".presentation.ui.activities.EventDetailActivity"
            android:theme="@style/Translucent" />
        <activity
            android:name=".presentation.ui.activities.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>